{
  "name": "slatirous",
  "version": "1.0.0",
  "description": "A Blogging System ",
  "main": "index.js",
  "scripts": {
    "build": "npm run lint",
    "lint": "eslint *.js",
    "test": "jest --coverage --verbose",
    "test:ci": "npm run start:ci & cypress run",
    "start": "serve --listen ${PORT:-8080}",
    "start:ci": "serve --no-clipboard --listen ${PORT:-8080}",
    "dev": "npm start",
    "cy:verify": "cypress verify",
    "cy:version": "cypress version",
    "cy:run": "cypress run",
    "cy:run:record": "cypress run --record",
    "cy:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pnmtjonahen/slatirous.js.git"
  },
  "keywords": [
    "js",
    "webcomponents",
    "blogging",
    "markdown"
  ],
  "author": "Philippe Tjon-A-Hen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pnmtjonahen/slatirous.js/issues"
  },
  "homepage": "https://github.com/pnmtjonahen/slatirous.js#readme",
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.2",
    "@bahmutov/print-env": "^1.2.0",
    "@testing-library/jest-dom": "^4.1.2",
    "babel-jest": "^24.9.0",
    "cypress": "^3.8.3",
    "eslint": "^6.5.1",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "jest-fetch-mock": "^2.1.2",
    "serve": "^11.3.0"
  },
  "jest": {
    "testURL": "http://localhost",
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ],
    "setupFilesAfterEnv": [
      "jest-extended"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "text",
      "lcov"
    ]
  }
}
